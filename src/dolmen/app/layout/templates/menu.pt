<dl tal:condition="viewletmanager/viewlets"
    tal:attributes="id viewletmanager/id;
		    class viewletmanager/menu_class;">
  <dt tal:content="viewletmanager/title"
      tal:condition="viewletmanager/title" />
  <dd>
    <ul>
      <tal:loop repeat="action viewletmanager/viewlets">
      <li tal:define="selected python:action.__name__ == context.selected_view;
	              selected_class python:selected and 'selected' or ''"
	  tal:attributes="class string:${viewletmanager/entry_class} $selected_class;">
	<a tal:attributes="href string:${viewletmanager/context_url}${action/__name__}" tal:content="action/title" />
      </li>
      </tal:loop>
    </ul>
  </dd>
</dl>
