<dl tal:condition="viewlet/actions"
    tal:attributes="id viewlet/menu_name;
		class viewlet/menu_class;">
  <dt tal:content="viewlet/title"
      tal:condition="viewlet/title" />
  <dd>
    <ul class="menu">
      <tal:actions repeat="action viewlet/actions">
	<li tal:attributes="class action/css">
	  <a tal:condition="not: action/selected"
	      tal:attributes="href action/url; title action/title;"
	      tal:content="action/title" />
	  <a tal:condition="action/selected"
	      tal:attributes="title action/title;"
	      tal:content="action/title" />
	</li>
      </tal:actions>
    </ul>
  </dd>
</dl>
